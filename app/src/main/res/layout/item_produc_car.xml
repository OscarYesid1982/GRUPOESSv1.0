<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_linear_ProductoCar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="1dp"
    app:layout_constraintCircleRadius="10dp"
    android:layout_margin="5dp"
    android:layout_marginStart="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_car_Producto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_produc_car_NomProduc"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:maxLines="1"
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:text=""/>


                <TextView
                    android:id="@+id/item_produc_car_EnvioProduc"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/divider_gray"
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:text=""/>

            </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="-10dp">

        <TextView
            android:id="@+id/item_produc_car_ValorProdTotal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:text=""/>
        <TextView
            android:id="@+id/item_produc_car_Cantidad"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/divider_gray"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text=""/>


    </LinearLayout>



        </LinearLayout>

    <ImageButton
        android:id="@+id/car_eliminar_producto"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/x"
        android:padding="5dp"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"/>

</androidx.cardview.widget.CardView>